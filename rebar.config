%%-*- mode: erlang -*-
{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_unused_vars,
    warn_export_all,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_bif_clash,
    warn_unused_record,
    warn_deprecated_function,
    warn_obsolete_guard,
    warn_export_vars,
    warn_exported_vars,
    warn_untyped_record,
    warn_missing_spec
]}.

{project_plugins, [
    {rebar3_depup, "~> 0.4"},
    {rebar3_hex, "~> 7.0"},
    {rebar3_ex_doc, "~> 0.2"},
    {rebar3_lint, "~> 4.0"},
    {rebar3_ex_doc, "~> 0.2"},
    {erlfmt, "~> 1.6"}
]}.

{profiles, [
    {test, [
        {deps, [{proper, "1.4.0"}]},
        {erl_opts, [nowarn_export_all, nowarn_missing_spec, nowarn_missing_doc]},
        {eunit_opts, [verbose]},
        {cover_opts, [verbose, {min_coverage, 60}]},
        {cover_enabled, true},
        {cover_export_enabled, true}
    ]}
]}.

{deps, [
    {dns_erlang, "~> 3.0"}
]}.

{dialyzer, [
    {warnings, [
        no_return,
        unmatched_returns,
        error_handling,
        underspecs,
        unknown
    ]}
]}.

{xref_checks, [
    locals_not_used,
    undefined_functions,
    undefined_function_calls,
    {deprecated_function_calls, next_major_release},
    {deprecated_functions, next_major_release}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc, [
    {source_url, <<"https://github.com/dnsimple/dnstest">>},
    {main, <<"readme">>},
    {extras, [
        {'README.md', #{title => <<"Overview">>}},
        {'LICENSE.md', #{title => <<"License">>}}
    ]}
]}.

{erlfmt, [
    write,
    {files, [
        "src/**/*.{hrl,erl,app.src}",
        "test/**/*.{hrl,erl,app.src}",
        "dnstest.config",
        "rebar.config"
    ]}
]}.

{elvis, [
    #{
        dirs => ["src"],
        filter => "*.erl",
        rules => [
            {elvis_text_style, line_length, #{
                limit => 100, skip_comments => whole_line, no_whitespace_after_limit => true
            }},
            {elvis_style, no_debug_call, #{ignore => [dnstest_metrics]}},
            {elvis_style, atom_naming_convention, #{regex => "^([a-z][a-z0-9_]*_?)*(_SUITE)?$"}},
            {elvis_style, dont_repeat_yourself, #{min_complexity => 20}},
            {elvis_style, no_throw, disable}
        ],
        ruleset => erl_files
    },
    #{
        dirs => ["."],
        filter => "rebar.config",
        ruleset => rebar_config
    }
]}.
